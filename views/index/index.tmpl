<% if(data.user) { %>
    <h1 class="fp-title">Welcome back <%= data.user.username %>!</h1>
    <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <% var colors = ['bg-red', 'bg-yellow', 'bg-aqua', 'bg-blue', 'bg-light-blue',
        'bg-green', 'bg-navy', 'bg-teal', 'bg-olive', 'bg-lime', 'bg-orange', 'bg-fuchsia', 'bg-purple', 'bg-maroon'] %>

        <% _.each(data.projects, function(project) { %>
            <% var colorClass = colors[Math.floor(Math.random() * 14)] %>
            <div class="col-xs-4">
            <!-- small box -->
                <div class="project-box small-box <%= colorClass %>">

                    <div class="inner">
                        <h4><%= project.name %></h4>

                        <p><%= moment.duration(project.totalTimeUsed).humanize() %></p>
                    </div>
                    <div class="icon">
                        <!--<i class="fa fa-shopping-cart"></i>-->
                    </div>
                    <a href="#" class="small-box-footer">
                        More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <h1 class="fp-title">Welcome to Trackitime!</h1>
    <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <div class="btn btn-lg btn-primary">Get started!</div>
    </div>
<% } %>