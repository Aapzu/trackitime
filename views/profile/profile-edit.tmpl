<% if(message && message.length) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %>

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li>Profile</li>
        <li class="active"><a href="/profile/edit">Edit</a></li>
    </ol>
</section>
<section class="content">
<div class="col-lg-6 col-lg-offset-3">
    <div class="box box-solid box-primary">
        <div class="box-header">
            <span class="box-title">Edit your profile</span>
        </div>
        <form action="/project/create" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label for="userNameInput">Username</label>
                    <input type="text" class="form-control" id="userNameInput" value="<%= user.username %>" disabled title="The username cannot be changed">
                </div>
                <div class="form-group">
                    <label for="nameInput">Full Name</label>
                    <input name="name" type="text" class="form-control" id="nameInput" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label for="oldPasswordInput">Old Password</label>
                    <input name="oldPassword" type="password" class="form-control" id="oldPasswordInput" placeholder="Old Password">
                </div>
                <div class="form-group">
                    <label for="newPasswordInput">New Password</label>
                    <input name="password" type="password" class="form-control" id="newPasswordInput" placeholder="New Password">
                </div>
                <div class="form-group">
                    <label for="newPasswordAgainInput">New Password Again</label>
                    <input name="password2" type="password" class="form-control" id="newPasswordAgainInput" placeholder="New Password Again">
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">Save</button>
            </div>
        </form>
    </div>
</div>
</section>
